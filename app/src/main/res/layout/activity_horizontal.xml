<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context=".MainActivity">

    <com.expandablebutton.HorizontalExpandableButton
        android:id="@+id/btn_hike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:button_icon="@drawable/hike"
        app:button_icon_height="25dp"
        app:button_icon_width="25dp"
        app:expandable_area_color="#603498DB"
        app:expandable_button_size="50dp"
        app:hide_text="\nh\ni\nk\ne"
        app:icon_button_color="#3498DB"
    />

    <com.expandablebutton.HorizontalExpandableButton
        android:id="@+id/btn_twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:button_icon="@drawable/twitter"
        app:button_icon_height="25dp"
        app:button_icon_width="25dp"
        app:expandable_area_color="#601da1f2"
        app:expandable_button_size="50dp"
        app:hide_text="\nT\nw\ni\nt\nt\ne\nr\n"
        app:icon_button_color="#1da1f2"/>

    <com.expandablebutton.HorizontalExpandableButton
        android:id="@+id/btn_instagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:button_icon="@drawable/instagram"
        app:button_icon_height="25dp"
        app:button_icon_width="25dp"
        app:expandable_area_color="#60e1306c"
        app:expandable_button_size="50dp"
        app:hide_text="\nI\nn\ns\nt\ng\nr\na\nm"
        app:icon_button_color="#e1306c"/>

    <com.expandablebutton.HorizontalExpandableButton
        android:id="@+id/btn_youtube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:button_icon="@drawable/youtube"
        app:button_icon_height="25dp"
        app:button_icon_width="25dp"
        app:expandable_area_color="#60cd201f"
        app:expandable_button_size="50dp"
        app:hide_text="\nY\no\nu\nt\nu\nb\ne\n"
        app:icon_button_color="#cd201f"/>
</LinearLayout>
